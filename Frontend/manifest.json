{
  "manifest_version": 3,
  "name": "Aurascopes",
  "version": "1.0",
  "description": "Untangle the quantum chaos of the cosmos with personalized horoscopes.",
  "permissions": ["storage"],
  "host_permissions": ["https://hooks.zapier.com/*"],
  "chrome_url_overrides": {
    "newtab": "blank.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
